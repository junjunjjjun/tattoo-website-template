---
import Layout from "~/layouts/Layout.astro";

const images = Array.from({ length: 18 }, (_, i) => `/gallery/tattoo${i + 1}.png`);
---

<Layout title="Designs" pageTitle="Tattoo Styles">
  <div class="relative min-h-screen w-full bg-black font-['Times New Roman'] text-white">
    
    <!-- Hero Heading -->
    <div class="relative z-10 flex flex-col items-center justify-center text-center px-4 pt-[45vh] pb-[35vh]">
      <h1 class="text-5xl sm:text-6xl font-bold drop-shadow-[0_0_12px_rgba(255,255,255,0.75)]">
        Styles We Offer
      </h1>
      <p class="mt-4 text-xl drop-shadow-[0_0_20px_rgba(255,255,255,0.9)]">
        Be. The. Art.
      </p>
    </div>

    <!-- Tattoo Gallery -->
    <div class="relative z-10 px-4 pb-32">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          images.map((src, i) => {
            return <img
              src={src}
              alt={`Tattoo ${i + 1}`}
              class="rounded-lg shadow-[0_0_20px_rgba(255,255,255,0.25)] transition-all duration-300 hover:scale-105 hover:shadow-[0_0_40px_rgba(255,255,255,0.75)] hover:-translate-y-2"
              loading="lazy"
            />
          })
        }
      </div>
    </div>

  </div>
</Layout>
